<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details %>
  </div>
  <div class="form-group">
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
